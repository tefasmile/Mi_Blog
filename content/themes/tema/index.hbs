{{!< default}}

{{! The big featured header }}

{{navigation}}
{{#if @blog.cover}}
<header id="main-header" class="shadowed-text" style="background-image: url({{@blog.cover}})">
        <div id="main-header-shadow"></div> 

{{else}} 

<header id="main-header">
{{/if}}
        {{!avatar}}
        <div class="avatar">
        <figure class="image">
            <img src="/assets/img/tefa.jpg"/>
        </figure>
        </div>
        <div class="bounding">
            <div id="main-header-content">
                <h1 id="page-title">{{@blog.title}}</h1>            
                <h2 id="page-descr">{{@blog.description}}</h2>
            </div>     
            <nav id="social-nav">
                <a class="social-link"><i class="fa fa-facebook"></i></a>
                <a class="social-link"><i class="fa fa-twitter"></i></a>
                <a class="social-link"><i class="fa fa-google-plus"></i></a>
                <a class="social-link"><i class="fa fa-linkedin"></i></a>
                <a class="social-link"><i class="fa fa-github-alt"></i></a>
            </nav>
        </div>
    </header>

{{! The main content area on the homepage }}
<main id="content" class="bounding" role="main">
    <div class="frame">
    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> "loop"}}
    </div>
</main>


{{! Previous/next page links - displayed on every page }}
{{pagination}}

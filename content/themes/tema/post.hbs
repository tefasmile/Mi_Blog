{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

{{! Everything inside the #post tags pulls data from the post }}
{{#post}}

{{navigation}}

{{#if image}}
<header id="main-header" class="post-header shadowed-text" style="background-image: url({{image}})">
    <div id="main-header-shadow"></div>

{{else}}

<header id="main-header" class="post-header">
{{! buttons like}}

{{/if}}

    <div class="bounding">
        <div id="main-header-content">
            <h1 id="page-title">{{title}}</h1>            
            <h2 id="post-date">{{date format="DD MMMM YYYY"}}</h2>
        </div>     
    </div>
</header>

<div class="bounding">
    <article id="main-article">
        
        {{!button likes}}
        <div class="redes-sociales">
            <div class="face">
                <div id="fb-root"></div>
                <div class="fb-like" data-href="http://www.compartidisimo.com" data-width="320" data-layout="button_count" data-action="like" data-share="false"></div>
            </div>
            <div class="tw">
                {{!twitter}}
                <a href="https://twitter.com/share" class="twitter-share-button" data-url="http://www.compartidisimo.com/" data-via="tefalife">Tweet</a>
            </div>
            <div class="li">
                <script src="//platform.linkedin.com/in.js" type="text/javascript"> lang: en_US</script>
                <script type="IN/Share" data-url="https://platzi.com/" data-counter="right"></script>
            </div>
            <div class="go">
                {{!google}}
                <div class="g-plusone" data-annotation="none"></div>
            </div>
        </div>
        
        <div class="post-content">{{content}}</div>

        <section class="tags">
            {{tags prefix='on: '}}
        </section>

        <section class="share">
            <a class="twitter" href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}"
                onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                <i class="fa fa-twitter"></i>
            </a>
            <a class="facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
                onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                <i class="fa fa-facebook"></i>
            </a>
            <a class="google-plus" href="https://plus.google.com/share?url={{url absolute="true"}}"
               onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                <i class="fa fa-google-plus"></i>
            </a>
        </section>
    </article>

    <footer class="post-footer">
        {{#author}}

            {{#if image}}
            <a class="author-image" style="background-image: url({{image}})" href="{{url}}"></a>
            {{/if}}

            <h4 id="author-name"><a href="{{url}}">{{name}}</a></h4>

            <div id="author-bio">
                <figure>
                    <img class="imagen" src="{{asset "img/tefa.jpg"}}"/>
                    <p class="leyend">GrowHacker en constante aprendizaje, feliz de compartir conocimiento.</p>
                </figure>
            </div>

            <div class="author-meta">
                {{#if location}}
                    <span class="author-location">{{location}}</span>
                {{/if}}
                    
                {{#if website}}
                    <span class="author-link"><a href="{{website}}">{{website}}</a></span>
                {{/if}}
            </div>

        {{/author}}           

        </footer>

    </article>
</div>
{{/post}}

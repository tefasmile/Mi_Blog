{{!< default}}
{{#if tag.image}}
    <header id="main-header" class="shadowed-text" style="background-image: url({{tag.image}})">       
        <div class="header-shadow"></div>
{{else}}{{#if @blog.cover}}
    <header id="main-header" class="shadowed-text" style="background-image: url({{@blog.cover}})">
        <div class="header-shadow"></div>
{{else}}
    <header id="main-header">
{{/if}}
{{/if}}
        <div class="bounding">
            <div id="main-header-content">
                <h1 id="page-title">{{tag.name}}</h1>                           
                <h2 class="page-description">
                    {{#if tag.description}}
                        {{tag.description}}
                    {{else}}
                        {{pagination.total}} posts found
                    {{/if}}
                </h2> 
            </div>     

            {{#if image}}
                <div class="author-image" style="background-image: url({{image}})"></div>   
            {{/if}}
        </div>
    </header>

{{! The main content area on the homepage }}
<main id="content" class="bounding" role="main">

    {{! The tag below includes the post loop - partials/loop.hbs }}
    <div class="frame">{{> "loop"}}</div>    

</main>
